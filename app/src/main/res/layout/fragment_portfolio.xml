<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/portfolio_icon"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/login_off" />

        <ImageView
            android:id="@+id/vaccination_icon"
            android:layout_width="180dp"
            android:layout_height="123dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="60dp"
            app:srcCompat="@drawable/syringe" />

        <Button
            android:id="@+id/vaccination_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:text="Vaccination record"
            android:background="@drawable/round_corner"/>

        <ImageView
            android:id="@+id/plan_icon"
            android:layout_width="302dp"
            android:layout_height="67dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="55dp"
            app:srcCompat="@drawable/plan" />

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:text="My plan"
            android:background="@drawable/round_corner"/>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>